<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carter_one"
                android:textSize="30sp"
                android:translationX="65dp"
                android:textColor="@color/design_default_color_background"
                android:text="Kempinski Hotel" />

            <ImageView
                android:id="@+id/kempinski"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:translationX="65dp"
                android:src="@drawable/kempinski"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationY="5dp"
                android:fontFamily="@font/carter_one"
                android:textSize="30sp"
                android:translationX="100dp"
                android:textColor="@color/design_default_color_background"
                android:text="Royal Hotel" />

            <ImageView
                android:id="@+id/royal"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:translationX="65dp"
                android:src="@drawable/royal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationY="20dp"
                android:fontFamily="@font/carter_one"
                android:textSize="30sp"
                android:translationX="70dp"
                android:textColor="@color/design_default_color_background"
                android:text="Fairmont Hotel" />

            <ImageView
                android:id="@+id/fairmont"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/fairmont"
                android:translationX="65dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationY="20dp"
                android:fontFamily="@font/carter_one"
                android:textSize="30sp"
                android:translationX="90dp"
                android:textColor="@color/design_default_color_background"
                android:text="Mariot Hotel" />

            <ImageView
                android:id="@+id/mariot"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/mariot"
                android:translationY="-5dp"
                android:translationX="65dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>